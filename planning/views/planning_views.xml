<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- planning.slot views -->
    <record id="planning_view_tree" model="ir.ui.view">
        <field name="name">planning.slot.tree</field>
        <field name="model">planning.slot</field>
        <field name="arch" type="xml">
            <tree string="Shift List" multi_edit="1" sample="1" editable="top">
                <field name="resource_id" groups="planning.group_planning_user" widget="many2one_avatar" optional="show"
                    attrs="{'readonly': ['|', ('start_datetime', '=', False), ('end_datetime', '=', False)]}"/>
                <field name="role_id" optional="show"/>
                <field name="start_datetime" widget="daterange" options="{'related_end_date': 'end_datetime'}"/>
                <field name="end_datetime" widget="daterange" options="{'related_start_date': 'start_datetime'}"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide" readonly="1"/>
                <field name="allocated_hours" widget="float_time" readonly="1" decoration-danger="allocated_percentage &gt; 100"/>
                <field name="allocated_percentage" readonly="1" optional="hide" decoration-danger="allocated_percentage &gt; 100"/>
                <field name="name" optional="hide" />
                <field name="state" decoration-success="state == 'published'" widget="badge" optional="hide" groups="planning.group_planning_manager" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="planning_view_form" model="ir.ui.view">
        <field name="name">planning.slot.form</field>
        <field name="model">planning.slot</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Publish &amp; Send" type="object" name="action_send" class="btn btn-primary"
                        close="1" attrs="{'invisible': ['|', ('state', '=', 'published'), ('resource_type', '=', 'material')]}" groups="planning.group_planning_manager"/>
                    <button string="Publish" type="object" name="action_publish" class="btn btn-primary"
                        close="1" groups="planning.group_planning_manager" attrs="{'invisible': ['|', ('state', '=', 'published'), ('resource_type', '=', 'material')]}"/>
                    <button name="action_self_assign" class="btn btn-primary" type="object" string="I Take It"
                        attrs="{'invisible': ['|', '|', ('resource_id', '!=', False), ('start_datetime', '=', False), ('end_datetime', '=', False)]}" close="1"/>
                    <button name="action_self_unassign" class="btn btn-secondary" type="object" string="I Am Unavailable"
                        attrs="{'invisible': ['|', '|', '|', '|', ('is_assigned_to_me', '=', False), ('allow_self_unassign', '=', False),
                        ('is_past', '=', True), ('is_unassign_deadline_passed', '=', True), ('resource_type', '=', 'material')]}"/>
                    <button string="Send" type="object" name="action_send" class="btn btn-secondary" close="1"
                        attrs="{'invisible': ['|', ('state', '=', 'draft'), ('resource_type', '=', 'material')]}" groups="planning.group_planning_manager"/>
                    <button string="Reset to Draft" type="object" name="action_unpublish"
                        class="btn btn-secondary" close="1" groups="planning.group_planning_manager"
                        attrs="{'invisible': ['|', ('state', '=', 'draft'), ('resource_type', '=', 'material')]}"/>
                    <field name="state" widget="statusbar" groups="planning.group_planning_manager"/>
                </header>
                <field name="is_past" invisible="1"/>
                <field name="is_unassign_deadline_passed" invisible="1"/>
                <field name="work_email" invisible="1" />
                <field name="resource_type" invisible="1" />
                <field name="previous_template_id" invisible="1" />
                <field name="template_reset" invisible="1" />
                <field name="employee_id" invisible="1"/>
                <field name="resource_id" invisible="1"/>
                <field name="resource_type" invisible="1"/>
                <div role="alert" class="alert alert-warning mb-0 p-3 text-center" attrs="{'invisible': [('overlap_slot_count', '=', 0)]}">
                    <button name="action_see_overlaping_slots" type="object" class="btn-link" attrs="{'invisible': [('overlap_slot_count', '=', 0)]}">
                        <field name="overlap_slot_count"/> other shift(s)
                    </button>
                    <span class="align-middle" attrs="{'invisible': [('overlap_slot_count', '=', 0)]}">for this resource at the same time.</span>
                </div>

                <sheet string="Shift">
                    <div class="oe_button_box" name="button_box">
                        <!-- Used by other modules-->
                    </div>
                    <field name="is_assigned_to_me" invisible="1"/>
                    <field name="allow_self_unassign" invisible="1"/>
                    <group attrs="{'invisible': [('template_autocomplete_ids', '=', []), ('template_id', '=', False)]}"
                        groups="planning.group_planning_manager" name="shift_templates" class="oe_edit_only">
                        <label for="template_id"/>
                        <field name="template_id" nolabel="1" class="text-break flex-wrap"
                            domain="[['id', 'in', template_autocomplete_ids]]"
                            widget="selection_badge" options="{'horizontal': true}"
                        />
                    </group>
                    <field name="template_autocomplete_ids" invisible="1"/>
                    <field name="recurrency_id" invisible='1'/>
                    <group>
                        <group>
                            <field name="resource_id" context="{'from_planning': True}" options="{'no_create_edit': True}"
                                attrs="{'readonly': ['|', ('start_datetime', '=', False), ('end_datetime', '=', False)]}"/>
                            <field name="role_id" attrs="{'invisible': [('resource_type', '=', 'material')]}"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <label for="start_datetime" string="Date"/>
                            <div class="o_row">
                                <field name="start_datetime" widget="daterange" options='{"related_end_date": "end_datetime"}'/>
                                <i class="fa fa-long-arrow-right mx-1" aria-label="Arrow icon" title="Arrow"/>
                                <field name="end_datetime" widget="daterange" options='{"related_start_date": "start_datetime"}'/>
                            </div>
                            <field name="allocated_percentage" decoration-danger="allocated_percentage &gt; 100" attrs="{'invisible': [('resource_type', '=', 'material')]}"/>
                            <field name="allocated_hours" widget="float_time" attrs="{'readonly': [('resource_type', '=', 'material')]}"/>
                        </group>
                    </group>
                    <group groups="planning.group_planning_manager">
                        <div colspan="2" class="o_checkbox_optional_field" groups="planning.group_planning_manager">
                            <label for="repeat"/>
                            <field name="repeat"/>
                            <div attrs="{'invisible': [('repeat', '=', False)]}" class="d-flex flex-grow-1">
                                <label for="repeat_interval" string="Every"/>
                                <field name="repeat_interval" class="col-2 col-lg-1"/>
                                <span class="mr-3">Weeks</span>
                                <field name="repeat_type" nolabel="1" attrs="{'required': [('repeat', '=', True)]}" class="col col-lg-1"/>
                                <field name="repeat_until" attrs="{'invisible': [('repeat_type', '!=', 'until')], 'required': [('repeat_type', '=', 'until'), ('repeat', '=', True)]}" class="col-auto col-lg-2 flex-shrink-1" nolabel="1"/>
                            </div>
                        </div>
                        <field name="allow_template_creation" invisible="1"/>
                        <div colspan="2" class="o_checkbox_optional_field" attrs="{'invisible': [('allow_template_creation', '=', False)]}" groups="planning.group_planning_manager">
                            <label for="template_creation"/>
                            <field name="template_creation"/>
                        </div>
                    </group>
                    <group>
                        <field name="name" string="" placeholder="Additional note" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="planning_view_kanban" model="ir.ui.view">
        <field name="name">planning.slot.kanban</field>
        <field name="model">planning.slot</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" sample="1">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="resource_id"/>
                <field name="role_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="start_datetime"/>
                <field name="end_datetime"/>
                <field name="color"/>
                <field name="allocated_percentage"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <div class="o_kanban_record_title">
                                        <em>
                                            <i class="fa fa-clock-o" role="img" aria-label="Date" title="Date"/>
                                            <field name="start_datetime"/>
                                            -
                                            <field name="end_datetime"/>
                                            (<field name="allocated_hours" widget="float_time"/>)
                                            (<field name="allocated_percentage"/>%)
                                        </em>
                                    </div>
                                </div>
                                <div class="o_dropdown_kanban dropdown" groups="planning.group_planning_manager">
                                    <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <span name="role"><field name="role_id"/></span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left"/>
                                <div class="oe_kanban_bottom_right">
                                    <field name="state" widget="label_selection"
                                        options="{'classes': {'draft': 'default', 'published': 'success'}}" groups="planning.group_planning_manager"/>
                                    <t t-if="record.employee_id.value">
                                        <field name="employee_id" widget="many2one_avatar_employee"/>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="planning_view_form_inherit" model="ir.ui.view">
        <field name="name">planning.slot.form</field>
        <field name="model">planning.slot</field>
        <field name="inherit_id" ref="planning_view_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//header" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="planning_view_form_in_gantt" model="ir.ui.view">
        <field name="name">planning.slot.form.gantt</field>
        <field name="model">planning.slot</field>
        <field name="inherit_id" ref="planning_view_form_inherit"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='shift_templates']" position="replace">
                <group attrs="{'invisible': [('template_autocomplete_ids', '=', []), ('template_id', '=', False)]}" class="oe_edit_only">
                    <label for="template_id" class="oe_edit_only"/>
                    <div class="o_row">
                        <field name="template_id" nolabel="1" class="text-break flex-wrap"
                            domain="[['id', 'in', template_autocomplete_ids]]"
                            widget="selection_badge" options="{'horizontal': true}"
                        />
                    </div>
                </group>
            </xpath>
            <xpath expr="//sheet" position="after">
                <footer class="d-flex flex-wrap">
                    <field name="publication_warning" invisible="1"/>
                    <field name="is_past" invisible="1"/>
                    <field name="confirm_delete" invisible="1"/>
                    <field name="is_unassign_deadline_passed" invisible="1"/>
                    <button string="Save" special="save" data-hotkey="v" class="btn btn-primary ml-1" close="1" groups="planning.group_planning_manager" attrs="{'invisible': [('confirm_delete', '=', True)]}"/>
                    <button string="Save" special="save" data-hotkey="v" class="btn btn-primary ml-1" close="1" groups="planning.group_planning_manager" attrs="{'invisible': [('confirm_delete', '=', False)]}" confirm="All subsequent shifts will be deleted. Are you sure you want to continue?" />
                    <button string="Publish &amp; Send" type="object" name="action_send" class="btn btn-primary" close="1"
                        attrs="{'invisible': ['|', ('state', '=', 'published'), ('resource_type', '=', 'material')]}" groups="planning.group_planning_manager"/>
                    <button string="Send" type="object" name="action_send" class="btn btn-secondary" close="1"
                        attrs="{'invisible': ['|', ('state', '=', 'draft'), ('resource_type', '=', 'material')]}" groups="planning.group_planning_manager"/>
                    <button string="Publish" type="object" name="action_publish" class="btn btn-primary" close="1"
                        groups="planning.group_planning_manager" attrs="{'invisible': ['|', ('state', '=', 'published'), ('resource_type', '=', 'material')]}"/>
                    <button string="Reset to Draft" type="object" name="action_unpublish" class="btn btn-secondary" close="1"
                        groups="planning.group_planning_manager" attrs="{'invisible': ['|', ('state', '=', 'draft'), ('resource_type', '=', 'material')]}"/>
                    <button string="Discard" special="cancel" data-hotkey="z" class="btn-secondary" close="1" fullscreen="True" groups="planning.group_planning_manager"/>

                    <button name="action_self_assign" class="btn btn-primary ml-md-auto" type="object" string="I Take It" attrs="{'invisible': ['|', '|', '|', ('resource_type', '=', 'material'), ('employee_id', '!=', False), ('start_datetime', '=', False), ('end_datetime', '=', False)]}" close="1" data-hotkey="q"/>
                    <button name="action_self_unassign" class="btn btn-secondary float-right" type="object" string="I Am Unavailable" attrs="{'invisible': ['|', '|', '|', ('is_assigned_to_me', '=', False), ('allow_self_unassign', '=', False), ('is_past', '=', True), ('is_unassign_deadline_passed', '=', True)]}" close="1" data-hotkey="w"/>
                    <button name="unlink" type="object" icon="fa-trash" class="btn-secondary float-right" close="1" attrs="{'invisible': [('id', '=', False)]}" groups="planning.group_planning_manager"/>
                </footer>
            </xpath>
        </field>
    </record>

    <record id="planning_view_search" model="ir.ui.view">
        <field name="name">planning.slot.search</field>
        <field name="model">planning.slot</field>
        <field name="arch" type="xml">
            <search>
                <field name="role_id" groups="planning.group_planning_user"/>
                <field name="department_id" groups="planning.group_planning_user"/>
                <field name="resource_id" groups="planning.group_planning_user"/>
                <field name="manager_id" groups="planning.group_planning_user"/>
                <field name="job_title" groups="planning.group_planning_user"/>
                <filter name="open_shifts" string="Open Shifts" domain="[('resource_id', '=', False)]" />
                <filter name="open_shifts_my_role" string="Open Shifts for my Roles" domain="[('resource_id', '=', False), ('role_id.employee_ids.user_id', 'in', [uid])]" />
                <filter name="my_shifts" string="My Shifts" domain="[('user_id', '=', uid)]" />
                <filter name="my_team_shifts" string="My Team" domain="[('manager_id.user_id', '=', uid)]" help="Shifts of Your Team Member" groups="planning.group_planning_user"/>
                <separator/>
                <filter string="Human" name="human" domain="[('resource_type','=', 'user')]"/>
                <filter string="Material" name="material" domain="[('resource_type','=', 'material')]"/>
                <separator/>
                <filter name="published_shifts" string="Published" domain="[('state', '=', 'published')]" groups="planning.group_planning_manager"/>
                <filter name="unpublished_shifts" string="Unpublished" domain="[('state', '=', 'draft')]" groups="planning.group_planning_manager"/>
                <separator groups="planning.group_planning_manager"/>
                <filter name="future" string="Future" domain="[('start_datetime', '>=', time.strftime('%%Y-%%m-%%d 00:00:00'))]" />
                <filter name="past" string="Past" domain="[('start_datetime', '&lt;=', time.strftime('%%Y-%%m-%%d 23:59:59'))]" />
                <separator/>
                <filter name="conflict_shifts" string="Shifts in Conflict" domain="[('overlap_slot_count', '>', 0)]"/>
                <group string="Group By">
                    <filter name="group_by_department" string="Department" context="{'group_by': 'department_id'}" groups="planning.group_planning_user"/>
                    <filter name="group_by_resource" string="Resource" context="{'group_by': 'resource_id'}" groups="planning.group_planning_user"/>
                    <filter name="group_by_role" string="Role" context="{'group_by': 'role_id'}"/>
                    <filter name="group_by_start_datetime" string="Start Date" context="{'group_by':'start_datetime:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="planning_view_calendar" model="ir.ui.view">
        <field name="name">planning.slot.calendar</field>
        <field name="model">planning.slot</field>
        <field name="arch" type="xml">
            <calendar string="Planning" date_start="start_datetime" date_stop="end_datetime" color="color" form_view_id="%(planning_view_form_inherit)d" event_open_popup="true" quick_add="False" js_class="planning_calendar" mode="month" show_unusual_days="True">
                <field name="resource_id" avatar_field="avatar_128"/>
                <field name="is_hatched" invisible="1" />
                <field name="role_id" filters="1" color="color"/>
                <field name="allocated_hours" invisible="1"/>
                <field name="allocated_percentage" invisible="1"/>
                <field name="state" groups="planning.group_planning_manager"/>
            </calendar>
        </field>
    </record>

    <record id="planning_view_my_calendar" model="ir.ui.view">
        <field name="name">planning.slot.my.calendar</field>
        <field name="model">planning.slot</field>
        <field name="priority">25</field>
        <field name="arch" type="xml">
            <calendar string="Planning" date_start="start_datetime" date_stop="end_datetime" color="color" form_view_id="%(planning_view_form_inherit)d" event_open_popup="true" show_unusual_days="True" quick_add="False" js_class="planning_calendar" mode="month">
                <field name="name"/>
                <field name="resource_id" avatar_field="avatar_128"/>
                <field name="role_id" filters="1" color="color"/>
                <field name="allocated_hours" invisible="1"/>
                <field name="allocated_percentage" invisible="1"/>
                <field name="state" groups="planning.group_planning_manager"/>
            </calendar>
        </field>
    </record>

    <record id="planning_view_gantt" model="ir.ui.view">
        <field name="name">planning.slot.gantt</field>
        <field name="model">planning.slot</field>
        <field name="arch" type="xml">
            <gantt
                js_class="planning_gantt"
                form_view_id="%(planning_view_form_in_gantt)d"
                date_start="start_datetime"
                date_stop="end_datetime"
                default_group_by="resource_id"
                default_scale="week"
                color="color"
                plan="false"
                string="Schedule"
                total_row="True"
                scales="day,week,month,year"
                precision="{'day': 'hour:full', 'week': 'day:full', 'month': 'day:full', 'year': 'day:full'}"
                decoration-info="state == 'draft'"
                decoration-warning="publication_warning"
                decoration-danger="overlap_slot_count > 0"
                display_unavailability="1"
                sample="1">

                <field name="allocated_hours"/>
                <field name="recurrency_id" />
                <field name="state"/>
                <field name="publication_warning"/>
                <field name="employee_id"/>
                <field name="resource_id"/>
                <field name="overlap_slot_count"/>
                <field name="allocated_percentage"/>
                <field name="name"/>
                <templates>
                    <div t-name="gantt-popover">
                        <div id="allocated_hours"><strong>Allocated Hours — </strong> <t t-esc="allocatedHoursFormatted"/> (<t t-esc="allocatedPercentageFormatted"/>%)</div>
                        <div><t t-esc="userTimezoneStartDate.format('l LT ')"/><i class="fa fa-long-arrow-right" title="Arrow"/><t t-esc="userTimezoneStopDate.format(' l LT')"/></div>
                        <p class="mt-2 mb-0" t-if="name"><t t-esc="name.slice(0, 200) + (name.length > 200?'…':'')" /></p>
                        <p t-if="publication_warning and !overlap_slot_count" class="text-warning mt-2 mb-0">
                            Some changes were made since this shift was published.
                        </p>
                        <p t-if="overlap_slot_count" class="text-danger mt-2 mb-0">
                            <t t-esc="overlap_slot_count"/> other shift(s) in conflict.
                        </p>
                    </div>
                </templates>
            </gantt>
        </field>
    </record>

    <record id="planning_view_pivot" model="ir.ui.view">
        <field name="name">planning.slot.pivot</field>
        <field name="model">planning.slot</field>
        <field name="arch" type="xml">
            <pivot string="Planning Analysis" sample="1">
                <field name="start_datetime" interval="week" type="col"/>
                <field name="allocated_hours" type="measure"/>
                <field name="allocated_percentage" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="planning_view_graph" model="ir.ui.view">
        <field name="name">planning.slot.graph</field>
        <field name="model">planning.slot</field>
        <field name="arch" type="xml">
            <graph string="Planning Analysis" sample="1">
                <field name="role_id"/>
                <field name="resource_id"/>
                <field name="allocated_hours" type="measure"/>
                <field name="allocated_percentage" type="measure"/>
             </graph>
         </field>
    </record>

    <!-- planning.role views -->
    <record id="planning_role_view_tree" model="ir.ui.view">
        <field name="name">planning.role.tree</field>
        <field name="model">planning.role</field>
        <field name="arch" type="xml">
            <tree string="Planning Role List" editable="bottom" multi_edit="1" sample="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="employee_ids" widget="many2many_avatar_employee" optional="show"/>
                <field name="color" widget="color_picker" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="planning_role_view_form" model="ir.ui.view">
        <field name="name">planning.role.form</field>
        <field name="model">planning.role</field>
        <field name="arch" type="xml">
            <form string="Planning Role">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <group>
                        <field name="active" invisible="1" />
                        <field name="name"/>
                        <field name="employee_ids" widget="many2many_avatar_employee"/>
                        <field name="color" widget="color_picker"/>
                        <field name="sequence" groups="base.group_no_one"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="planning_role_view_kanban" model="ir.ui.view">
        <field name="name">planning.role.view.kanban</field>
        <field name="model">planning.role</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" sample="1">
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name" />
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section o_dropdown_kanban">
                                    <a role="button" class="o_kanban_manage_toggle_button" href="#" title="Dropdown menu">
                                        <i class="fa fa-ellipsis-v" aria-label="Manage" title="Manage"/>
                                    </a>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <div class="o_kanban_card_manage_section" t-if="widget.editable or widget.deletable">
                                    <div role="menuitem">
                                        <a t-if="widget.editable" role="menuitem" type="edit">Edit</a>
                                    </div>
                                    <div role="menuitem">
                                        <a t-if="widget.deletable" role="menuitem" type="delete">Delete</a>
                                    </div>
                                </div>
