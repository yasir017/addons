<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <div t-name="FSMProductQuantity" class="h-100 ml-2 d-flex align-items-center o_fsm_product_quantity">
        <button t-if="!widget.isReadonly" name="fsm_remove_quantity"
            class="btn d-flex align-items-center justify-content-center o_qty_button">
            <i class="fa fa-minus center"/>
        </button>
        <input class="text-center px-1 mx-1" name="fsm_quantity" min="0" max="999999999" type="number"/>
        <button t-if="!widget.isReadonly" name="fsm_add_quantity"
            class="btn d-flex align-items-center justify-content-center o_qty_button">
            <i class="fa fa-plus"/>
        </button>
    </div>
</templates>
